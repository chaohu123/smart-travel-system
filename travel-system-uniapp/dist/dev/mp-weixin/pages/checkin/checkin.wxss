
.checkin-page.data-v-6e5fa1f7 {
  min-height: 100vh;
  background-color: #f7f8fa;
  display: flex;
  flex-direction: column;
}
.tabs-header.data-v-6e5fa1f7 {
  display: flex;
  background-color: #ffffff;
  border-bottom: 1rpx solid #eeeeee;
}
.tab-item.data-v-6e5fa1f7 {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
  position: relative;
}
.tab-item.active.data-v-6e5fa1f7 {
  color: #3ba272;
}
.tab-item.active.data-v-6e5fa1f7::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #3ba272;
  border-radius: 2rpx;
}
.tab-icon.data-v-6e5fa1f7 {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}
.tab-text.data-v-6e5fa1f7 {
  font-size: 26rpx;
  color: #666666;
}
.tab-item.active .tab-text.data-v-6e5fa1f7 {
  color: #3ba272;
  font-weight: 600;
}
.checkin-scroll.data-v-6e5fa1f7 {
  flex: 1;
}
.checkin-list.data-v-6e5fa1f7 {
  padding: 24rpx;
}
.checkin-card.data-v-6e5fa1f7 {
  background-color: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}
.checkin-cover.data-v-6e5fa1f7 {
  width: 100%;
  height: 300rpx;
  background-color: #e5e5e5;
}
.checkin-content.data-v-6e5fa1f7 {
  padding: 20rpx;
}
.checkin-name.data-v-6e5fa1f7 {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  display: block;
  margin-bottom: 12rpx;
}
.checkin-location.data-v-6e5fa1f7 {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.location-icon.data-v-6e5fa1f7 {
  font-size: 24rpx;
  margin-right: 8rpx;
}
.location-text.data-v-6e5fa1f7 {
  font-size: 24rpx;
  color: #999999;
}
.checkin-footer.data-v-6e5fa1f7 {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.meta-text.data-v-6e5fa1f7 {
  font-size: 22rpx;
  color: #999999;
}
.checkin-btn.data-v-6e5fa1f7 {
  padding: 12rpx 32rpx;
  border-radius: 999rpx;
  background-color: #3ba272;
  color: #ffffff;
  font-size: 26rpx;
  line-height: 1.6;
}
.checkin-btn--hover.data-v-6e5fa1f7 {
  background-color: #31875e;
}
.loading.data-v-6e5fa1f7,
.no-more.data-v-6e5fa1f7 {
  text-align: center;
  padding: 40rpx;
  color: #999999;
  font-size: 26rpx;
}

/* 打卡弹窗样式 */
.modal-overlay.data-v-6e5fa1f7 {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}
.modal-content.data-v-6e5fa1f7 {
  width: 90%;
  max-height: 80vh;
  background-color: #ffffff;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.modal-header.data-v-6e5fa1f7 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #eeeeee;
}
.modal-title.data-v-6e5fa1f7 {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}
.modal-close.data-v-6e5fa1f7 {
  font-size: 36rpx;
  color: #999999;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.modal-body.data-v-6e5fa1f7 {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
}
.upload-section.data-v-6e5fa1f7 {
  margin-bottom: 32rpx;
}
.location-warning.data-v-6e5fa1f7 {
  display: block;
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #f59e0b;
}
.section-label.data-v-6e5fa1f7 {
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
  display: block;
  margin-bottom: 16rpx;
}
.upload-area.data-v-6e5fa1f7 {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.upload-item.data-v-6e5fa1f7 {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  overflow: hidden;
}
.upload-image.data-v-6e5fa1f7 {
  width: 100%;
  height: 100%;
}
.upload-delete.data-v-6e5fa1f7 {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 32rpx;
  height: 32rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}
.upload-add.data-v-6e5fa1f7 {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #cccccc;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f7f8fa;
}
.upload-icon.data-v-6e5fa1f7 {
  font-size: 48rpx;
  color: #999999;
  margin-bottom: 8rpx;
}
.upload-text.data-v-6e5fa1f7 {
  font-size: 22rpx;
  color: #999999;
}
.comment-section.data-v-6e5fa1f7 {
  position: relative;
}
.comment-input.data-v-6e5fa1f7 {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background-color: #f7f8fa;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #333333;
  box-sizing: border-box;
}
.char-count.data-v-6e5fa1f7 {
  position: absolute;
  bottom: 12rpx;
  right: 20rpx;
  font-size: 22rpx;
  color: #999999;
}
.modal-footer.data-v-6e5fa1f7 {
  padding: 24rpx 32rpx 32rpx;
  border-top: 1rpx solid #eeeeee;
}
.submit-btn.data-v-6e5fa1f7 {
  width: 100%;
  padding: 24rpx;
  background-color: #3ba272;
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
}
