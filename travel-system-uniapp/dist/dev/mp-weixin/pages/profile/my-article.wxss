
.my-article-page.data-v-45957dff {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #F6F7F8;
}

/* 内容区域 */
.content-wrapper.data-v-45957dff {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  background-color: #F6F7F8;
}

/* 文章内容容器（类似 favorites-content） */
.article-content.data-v-45957dff {
  width: 100%;
  height: 100%;
  background-color: #F6F7F8;
  display: flex;
  flex-direction: column;
}

/* 状态筛选行 */
.status-filter-row.data-v-45957dff {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid #F0F0F0;
  overflow-x: auto;
  white-space: nowrap;
  position: sticky;
  top: 0;
  z-index: 9;
  flex-shrink: 0;
}
.status-filter-item.data-v-45957dff {
  padding: 12rpx 24rpx;
  background-color: #F6F7F8;
  border-radius: 48rpx;
  font-size: 24rpx;
  color: #666666;
  transition: all 120ms ease;
  flex-shrink: 0;
}
.status-filter-item.active.data-v-45957dff {
  background-color: #3BA272;
  color: #FFFFFF;
  font-weight: 600;
}

/* 滚动区域 */
.scroll-view.data-v-45957dff {
  flex: 1;
  min-height: 0;
  width: 100%;
  box-sizing: border-box;
  /* 确保 scroll-view 始终有高度，避免切换状态时高度变为 0 */
  height: 0;
}

/* 卡片列表 */
.note-list.data-v-45957dff {
  display: flex;
  flex-wrap: wrap;
  padding: 24rpx;
  gap: 24rpx;
  box-sizing: border-box;
}
.note-card.data-v-45957dff {
  width: calc((100% - 24rpx) / 2);
  flex: 0 0 calc((100% - 24rpx) / 2);
  background-color: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 120ms ease;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.note-card.data-v-45957dff:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* 图片区域 */
.note-cover-wrapper.data-v-45957dff {
  width: 100%;
  height: 0;
  padding-bottom: 56.25%; /* 16:9 */
  position: relative;
  overflow: hidden;
  background-color: #E5E5E5;
  border-radius: 16rpx 16rpx 0 0;
}
.note-cover.data-v-45957dff {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: opacity 240ms ease;
}
.note-cover.loaded.data-v-45957dff {
  opacity: 1;
}
.note-cover.placeholder.data-v-45957dff {
  opacity: 0.5;
  z-index: 1;
}

/* 状态标签 */
.note-status-tag.data-v-45957dff {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  padding: 4rpx 12rpx;
  color: #FFFFFF;
  font-size: 20rpx;
  border-radius: 20rpx;
  font-weight: 600;
}
.note-status-tag.status-private.data-v-45957dff {
  background-color: rgba(153, 153, 153, 0.9);
}
.note-status-tag.status-pass.data-v-45957dff {
  background-color: rgba(47, 166, 106, 0.9);
}
.note-status-tag.status-pending.data-v-45957dff {
  background-color: rgba(255, 193, 7, 0.9);
}
.note-status-tag.status-reject.data-v-45957dff {
  background-color: rgba(244, 67, 54, 0.9);
}

/* 信息区 */
.note-info.data-v-45957dff {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  background-color: #FFFFFF;
  box-shadow: inset 0 1rpx 0 0 #F0F0F0;
}

/* 第一行：作者头像 + 昵称 + 发布时间 */
.note-meta-row.data-v-45957dff {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.note-author-avatar.data-v-45957dff {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #E5E5E5;
  flex-shrink: 0;
}
.note-author-name.data-v-45957dff {
  flex: 1;
  font-size: 24rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.note-publish-time.data-v-45957dff {
  font-size: 20rpx;
  color: #9EA7B0;
  flex-shrink: 0;
}

/* 第二行：文章标题 */
.note-title-row.data-v-45957dff {
  margin-top: 4rpx;
}
.note-title.data-v-45957dff {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 第三行：地点/类别 */
.note-location-row.data-v-45957dff {
  margin-top: 4rpx;
}
.note-location.data-v-45957dff {
  font-size: 24rpx;
  color: #9EA7B0;
}

/* 审核不通过原因 */
