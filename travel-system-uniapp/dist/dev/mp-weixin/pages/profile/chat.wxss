
.chat-page.data-v-5be53b82 {
  min-height: 100vh;
  background-color: #f0f0f0;
  display: flex;
  flex-direction: column;
}

/* 导航栏 */
.navbar.data-v-5be53b82 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  padding-top: calc(20rpx + env(safe-area-inset-top));
  background: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}
.nav-back.data-v-5be53b82 {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.nav-back .iconfont.data-v-5be53b82 {
  font-size: 36rpx;
  color: #333;
}
.nav-user.data-v-5be53b82 {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}
.nav-avatar.data-v-5be53b82 {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.nav-name.data-v-5be53b82 {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}
.nav-placeholder.data-v-5be53b82 {
  width: 60rpx;
}

/* 消息列表 */
.chat-scroll.data-v-5be53b82 {
  flex: 1;
  height: calc(100vh - 200rpx);
}
.chat-messages.data-v-5be53b82 {
  padding: 30rpx 20rpx;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.message-wrapper.data-v-5be53b82 {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
.message-wrapper.message-own.data-v-5be53b82 {
  align-items: flex-end;
}
.message-item.data-v-5be53b82 {
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
  max-width: 70%;
}
.message-wrapper.message-own .message-item.data-v-5be53b82 {
  flex-direction: row-reverse;
  align-self: flex-end;
}
.message-avatar.data-v-5be53b82 {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  flex-shrink: 0;
}
.message-bubble.data-v-5be53b82 {
  padding: 20rpx 24rpx;
  background: #fff;
  border-radius: 20rpx;
  position: relative;
  word-wrap: break-word;
  word-break: break-all;
}
.message-bubble.bubble-own.data-v-5be53b82 {
  background: #3ba272;
}
.message-text.data-v-5be53b82 {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}
.bubble-own .message-text.data-v-5be53b82 {
  color: #fff;
}
.message-time-text.data-v-5be53b82 {
  font-size: 22rpx;
  color: #999;
  padding: 0 20rpx;
  text-align: center;
  margin-top: 8rpx;
}
.message-wrapper.message-own .message-time-text.data-v-5be53b82 {
  text-align: right;
}

/* 输入框 */
.input-container.data-v-5be53b82 {
  padding: 20rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  border-top: 1rpx solid #eee;
}
.input-box.data-v-5be53b82 {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
}
.input-field.data-v-5be53b82 {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  background: transparent;
}
.send-btn.data-v-5be53b82 {
  padding: 12rpx 32rpx;
  background: #ddd;
  border-radius: 30rpx;
  transition: all 0.3s;
}
.send-btn-active.data-v-5be53b82 {
  background: #3ba272;
}
.send-btn-text.data-v-5be53b82 {
  font-size: 26rpx;
  color: #fff;
  font-weight: 600;
}
.send-btn:not(.send-btn-active) .send-btn-text.data-v-5be53b82 {
  color: #999;
}
