
.edit-profile-page.data-v-5eb8b010 {
  min-height: 100vh;
  background-color: #f8fafb;
  display: flex;
  flex-direction: column;
}

/* 导航栏 */
.navbar.data-v-5eb8b010 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  padding-top: calc(20rpx + env(safe-area-inset-top));
  background: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}
.nav-back.data-v-5eb8b010 {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.nav-back .iconfont.data-v-5eb8b010 {
  font-size: 36rpx;
  color: #333;
}
.nav-title.data-v-5eb8b010 {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}
.nav-save.data-v-5eb8b010 {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.nav-save text.data-v-5eb8b010 {
  font-size: 30rpx;
  color: #3ba272;
  font-weight: 600;
}

/* 表单 */
.form-scroll.data-v-5eb8b010 {
  flex: 1;
  height: calc(100vh - 120rpx);
}
.form-section.data-v-5eb8b010 {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.section-label.data-v-5eb8b010 {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

/* 头像上传 */
.avatar-upload.data-v-5eb8b010 {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  align-self: center;
}
.avatar-preview.data-v-5eb8b010 {
  width: 100%;
  height: 100%;
}
.avatar-placeholder.data-v-5eb8b010 {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}
.avatar-placeholder .iconfont.data-v-5eb8b010 {
  font-size: 60rpx;
  color: #999;
}
.placeholder-text.data-v-5eb8b010 {
  font-size: 24rpx;
  color: #999;
}
.avatar-mask.data-v-5eb8b010 {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}
.avatar-mask .iconfont.data-v-5eb8b010 {
  font-size: 28rpx;
  color: #fff;
}

/* 输入框 */
.form-input.data-v-5eb8b010 {
  padding: 24rpx;
  background: #f8fafb;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}
.form-textarea.data-v-5eb8b010 {
  padding: 24rpx;
  background: #f8fafb;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  min-height: 200rpx;
  line-height: 1.6;
}
.char-count.data-v-5eb8b010 {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: -10rpx;
}
.form-readonly.data-v-5eb8b010 {
  padding: 24rpx;
  background: #f8fafb;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #999;
}
