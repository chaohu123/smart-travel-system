{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "@dcloudio/types"
    ]
  },
  "include": [
    "src/**/*",
    "uni.d.ts",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
