<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smarttravel.content.mapper.NoteScenicRefMapper">
  <resultMap id="BaseResultMap" type="com.smarttravel.content.domain.NoteScenicRef">
    <id column="id" property="id"/>
    <result column="note_id" property="noteId"/>
    <result column="scenic_id" property="scenicId"/>
    <result column="create_time" property="createTime"/>
    <result column="update_time" property="updateTime"/>
    <result column="del_flag" property="delFlag"/>
  </resultMap>

  <sql id="Base_Column_List">
    id, note_id, scenic_id, create_time, update_time, del_flag
  </sql>

  <insert id="insert" parameterType="com.smarttravel.content.domain.NoteScenicRef">
    INSERT INTO note_scenic_ref (note_id, scenic_id, create_time, del_flag)
    VALUES (#{noteId}, #{scenicId}, NOW(), 0)
  </insert>

  <delete id="deleteByNoteId">
    DELETE FROM note_scenic_ref WHERE note_id = #{noteId}
  </delete>

  <select id="selectByNoteId" resultMap="BaseResultMap">
    SELECT <include refid="Base_Column_List" />
    FROM note_scenic_ref
    WHERE note_id = #{noteId}
  </select>
</mapper>



























