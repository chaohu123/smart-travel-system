<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smarttravel.content.mapper.TravelNoteImageMapper">

    <resultMap id="TravelNoteImageResult" type="com.smarttravel.content.domain.TravelNoteImage">
        <id column="id" property="id"/>
        <result column="note_id" property="noteId"/>
        <result column="url" property="url"/>
        <result column="sort" property="sort"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="del_flag" property="delFlag"/>
    </resultMap>

    <insert id="insert" parameterType="com.smarttravel.content.domain.TravelNoteImage" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO travel_note_image
        (note_id, url, sort, create_time, update_time, del_flag)
        VALUES
        (#{noteId}, #{url}, #{sort}, NOW(), NOW(), 0)
    </insert>

    <update id="deleteByNoteId" parameterType="long">
        UPDATE travel_note_image
        SET del_flag = 1, update_time = NOW()
        WHERE note_id = #{noteId}
    </update>

    <select id="selectByNoteId" parameterType="long" resultMap="TravelNoteImageResult">
        SELECT id, note_id, url, sort, create_time, update_time, del_flag
        FROM travel_note_image
        WHERE note_id = #{noteId} AND del_flag = 0
        ORDER BY sort ASC
    </select>

</mapper>


















