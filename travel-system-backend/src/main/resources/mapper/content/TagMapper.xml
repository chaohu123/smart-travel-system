<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smarttravel.content.mapper.TagMapper">
  <resultMap id="BaseResultMap" type="com.smarttravel.content.domain.Tag">
    <id column="id" property="id"/>
    <result column="tag_name" property="tagName"/>
    <result column="tag_type" property="tagType"/>
    <result column="status" property="status"/>
    <result column="create_time" property="createTime"/>
    <result column="update_time" property="updateTime"/>
    <result column="del_flag" property="delFlag"/>
  </resultMap>

  <select id="selectList" parameterType="com.smarttravel.content.domain.Tag" resultMap="BaseResultMap">
    SELECT id, tag_name, tag_type, status, create_time, update_time, del_flag
    FROM tag
    <where>
      <if test="tagName != null">AND tag_name = #{tagName}</if>
      <if test="tagType != null">AND tag_type = #{tagType}</if>
      <if test="status != null">AND status = #{status}</if>
      <if test="delFlag != null">AND del_flag = #{delFlag}</if>
    </where>
    ORDER BY id ASC
  </select>

  <insert id="insert" parameterType="com.smarttravel.content.domain.Tag" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO tag (tag_name, tag_type, status, create_time, del_flag)
    VALUES (#{tagName}, #{tagType}, #{status}, NOW(), 0)
  </insert>

  <select id="selectByIds" resultMap="BaseResultMap">
    SELECT id, tag_name, tag_type, status, create_time, update_time, del_flag
    FROM tag
    WHERE del_flag = 0
      <if test="ids != null and ids.size() > 0">
        AND id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
          #{id}
        </foreach>
      </if>
  </select>
</mapper>




